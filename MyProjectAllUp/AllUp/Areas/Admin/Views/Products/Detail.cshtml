@model Product

<div class="row clearfix">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="padding:20px">
                <div class="table-responsive pt-3">
                    <table id="myCategories" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Product Code
                                </th>
                                <th>
                                    Brand
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Tags
                                </th>
                                <th>
                                    Tax
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>
                                    @Model.Name
                                </td>

                                <td>
                                    @Model.ProductDeatil.ProductCode
                                </td>

                                <td>
                                    @Model.ProductDeatil.Brand

                                </td>
                                    
                                <td>
                                    @Html.Raw(Model.ProductDeatil.Description)
                                </td>

                                <td>
                                    @Model.ProductDeatil.Tags
                                </td>

                                <td>
                                    @Model.ProductDeatil.Tax
                                </td>
                            </tr>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

